<p id="notice"><%= notice %></p>
<b style = "font-size: 140%">
<% if current_user %>
  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
  Sign up or Sign in to be able to add new images or edit and destroy it.<br>
  <%= link_to 'Sign up', new_user_registration_path %><br>
  <%= link_to 'Sign in', new_user_session_path %>
<% end %>
</b>
<h1>Images</h1>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th style = "padding-left:20%">Caption</th>
      <th style = "padding-left:40%">First Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style = "background-color: #dee2e6">
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td style = "padding-left:20%;"><%= pin.caption %></td>
        <td style = "padding-left:40%"><%= image_tag(pin.images[0], style:'width:30%; height: auto') %></td>
        <td style = "font-size: 150%"><%= link_to 'Show', pin %></td>
        <% if current_user  %>
        <td style = "font-size: 150%"><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td style = "font-size: 150%"><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<b style = "font-size: 140%">
<%= link_to 'New Image', new_pin_path %>
</b>
